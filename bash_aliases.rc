# Kill, ps
function psgrep() {
  ps -ewwF | grep "$@" | grep -v "grep $@"
}

function killone_() {
  process=$(psgrep "$@" | awk '{ print $2 }')
  if [ "$process" ]; then
    echo "kill '$@': $process"
    kill $process
  else
    echo "'$@' not found"
  fi
}

# limit 10 performs head --lines NN
function limit() {
  if [ $# == 0 ]; then
    head
  else
    head --lines $1
  fi
}
