# ls like commands
alias ls='ls -hF --color=auto'
alias ll='ls -lhF --color=auto'
alias la='ls -AF --color=auto'
alias lrt='ls -lrthF'
function ld_func {
  ls -l $* | grep ^d;
}
alias ld='ld_func'

# mkdir & cd into it
function mc() {
  mkdir -p "$*" && cd "$*" && pwd
}

# swap 2 filenames around
function swap() {
  # todo(scottkirkwood): add some checks
  local TMPFILE=tmp.$$
  mv "$1" $TMPFILE
  mv "$2" "$1"
  mv $TMPFILE "$2"
}

